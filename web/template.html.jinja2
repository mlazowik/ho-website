<html lang="pl">
<head>
    <title>Heroes Orchestra</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
    <link href="https://fonts.googleapis.com/css?family=Cardo:400,700&display=swap&subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" href="ho.css" />
    <link rel="stylesheet" href="{{ page }}.css" />
    <meta content="telephone=no" name="format-detection">
</head>
<body>
    <header>
        <div class="header-above">
            <div>
                <img class="logo logo-side" src="assets/ho_logo.png" alt="Heroes Orchestra logo">
            </div>
            <nav>
                <ul>
                    <li class="menu-item highlight">
                        <a href="/">
                            <img class="highlight-off" src="assets/menu/pl/button_sg_01.png" alt="Strona główna" />
                            <img class="highlight-on" src="assets/menu/pl/button_sg_02.png" alt="Strona główna" />
                        </a>
                    </li>
                    <li class="menu-item highlight">
                        <a href="/events.html">
                            <img class="highlight-off" src="assets/menu/pl/button_koncerty_01.png" alt="Koncerty" />
                            <img class="highlight-on" src="assets/menu/pl/button_koncerty_02.png" alt="Koncerty" />
                        </a>
                    </li>
                    <li class="menu-item highlight">
                        <a href="/media.html">
                            <img class="highlight-off" src="assets/menu/pl/button_media_01.png" alt="Media" />
                            <img class="highlight-on" src="assets/menu/pl/button_media_02.png" alt="Media" />
                        </a>
                    </li>
                    <li>
                        <div>
                            <img class="logo logo-center" src="assets/ho_logo.png" alt="Heroes Orchestra logo">
                        </div>
                    </li>
                    <li class="menu-item highlight">
                        <a href="/shop.html">
                            <img class="highlight-off" src="assets/menu/pl/button_sklep_01.png" alt="Sklep" />
                            <img class="highlight-on" src="assets/menu/pl/button_sklep_02.png" alt="Sklep" />
                        </a>
                    </li>
                    <li class="menu-item highlight">
                        <a href="/about.html">
                            <img class="highlight-off" src="assets/menu/pl/button_o%20nas_01.png" alt="O nas" />
                            <img class="highlight-on" src="assets/menu/pl/button_o%20nas_02.png" alt="O nas" />
                        </a>
                    </li>
                    <li class="menu-item highlight">
                        <a href="/contact.html">
                            <img class="highlight-off" src="assets/menu/pl/button_kontakt_01.png" alt="Kontakt" />
                            <img class="highlight-on" src="assets/menu/pl/button_kontakt_02.png" alt="Kontakt" />
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="header-below">
            <div class="player">
                <div class="player-current-name">
                    <i class="player-speaker"></i>
                    <p>Heroes III, Main Theme</p>
                </div>
                <div class="player-controls">
                    <i class="player-back"></i>
                    <i class="player-play"></i>
                    <i class="player-next"></i>
                </div>
                <div class="player-next-name">
                    <p>Heroes III, Necropolis</p>
                </div>
            </div>
        </div>
    </header>
    {{ content }}
    <footer>
        <div class="social">
            <ul>
                <li>
                    <a class="highlight" target="_blank" href="https://www.facebook.com/heroesorchestra/">
                        <img class="highlight-off" alt="Facebook" src="assets/social/facebook_icon_01.png" />
                        <img class="highlight-on" alt="Facebook" src="assets/social/facebook_icon_02.png" />
                    </a>
                </li>
                <li>
                    <a class="highlight" target="_blank" href="https://www.youtube.com/channel/UC_2fN8KSOJPRoE8PSN2ZtYA">
                        <img class="highlight-off" alt="YouTube" src="assets/social/youtube_icon_01.png" />
                        <img class="highlight-on" alt="YouTube" src="assets/social/youtube_icon_02.png" />
                    </a>
                </li>
                <li>
                    <a class="highlight" href="#">
                        <img class="highlight-off" alt="Gmail" src="assets/social/Gmail_icon_01.png" />
                        <img class="highlight-on" alt="GMmil" src="assets/social/Gmail_icon_02.png" />
                    </a>
                </li>
                <li>
                    <a class="highlight" target="_blank" href="https://www.instagram.com/heroesorchestra/">
                        <img class="highlight-off" alt="Instagram" src="assets/social/Instagram_icon_01.png" />
                        <img class="highlight-on" alt="Instagram" src="assets/social/Instagram_icon_02.png" />
                    </a>
                </li>
                <li>
                    <a class="highlight" target="_blank" href="https://soundcloud.com/heroesorchestra">
                        <img class="highlight-off" alt="SoundCloud" src="assets/social/Soundcloud_icon_01.png" />
                        <img class="highlight-on" alt="SoundCloud" src="assets/social/Soundcloud_icon_02.png" />
                    </a>
                </li>
            </ul>
        </div>
        <p>heroesorchestra.com lorem ipsum dolor sit amet</p>
    </footer>
</body>
</html>